<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Chat — surewhynot.app</title>
  <link rel="stylesheet" href="./assets/css/style.css">
  <style>
    .chatLog{ height: 380px; overflow:auto; }
    .msg{ padding:8px 10px; border:1px solid rgba(255,255,255,0.10); background:rgba(0,0,0,0.25); border-radius:12px; margin:8px 0; }
    .msg b{ font-size:12px; opacity:.9; }
    .msg .meta{ font-size:12px; opacity:.65; margin-left:6px; }
    .msg .body{ margin-top:4px; white-space:pre-wrap; }
    .row2{ display:grid; grid-template-columns: 1fr auto; gap:10px; align-items:end; }
    @media (max-width:900px){ .row2{ grid-template-columns:1fr; } }
  </style>
</head>

<body>
  <div class="shell" data-topbar>
    <div class="card">
      <h1>Chat</h1>
      <div class="tiny">Local-only right now. Next step wires it to your Worker for real persistence.</div>

      <div class="out chatLog" id="chatLog"></div>

      <div class="row2">
        <div>
          <label>Message</label>
          <textarea id="chatInput" placeholder="Type message…" style="min-height:70px;"></textarea>
        </div>
        <div class="btns" style="margin:0;">
          <button class="primary" id="chatSend">Send</button>
          <button id="chatClear">Clear</button>
        </div>
      </div>

      <div class="tiny" id="chatStatus"></div>
    </div>

    <div class="footer">
      <a href="/pages/about.html">About</a> ·
      <a href="/pages/privacy.html">Privacy</a> ·
      <a href="/pages/contact.html">Contact</a>
    </div>
  </div>

<script type="module">
  import { injectTopbar } from "../assets/js/app.js";

  injectTopbar("chat");

  const ident = getIdentity();
  const $ = (id) => document.getElementById(id);

  const KEY = "swn_chat_local";
  const log = JSON.parse(localStorage.getItem(KEY) || "[]");

  function escapeHtml(s){
    return String(s).replace(/[&<>"']/g, c => ({ "&":"&amp;","<":"&lt;",">":"&gt;",'"':"&quot;","'":"&#39;" }[c]));
  }

  function render(){
    $("chatLog").innerHTML =
      log.map(m => `
        <div class="msg">
          <b>${escapeHtml(m.name)}</b>
          <span class="meta">${new Date(m.t).toLocaleString()}</span>
          <div class="body">${escapeHtml(m.text)}</div>
        </div>
      `).join("") || `<div class="tiny">No messages yet.</div>`;

    $("chatLog").scrollTop = $("chatLog").scrollHeight;
  }

  function save(){
    localStorage.setItem(KEY, JSON.stringify(log));
  }

  $("chatSend").onclick = () => {
    const text = $("chatInput").value.trim();
    if (!text) return;

    log.push({ uid: ident.uid, name: ident.name, text, t: Date.now() });
    save();
    $("chatInput").value = "";
    $("chatStatus").textContent = "Sent (local-only).";
    render();
  };

  $("chatClear").onclick = () => {
    localStorage.removeItem(KEY);
    log.length = 0;
    $("chatStatus").textContent = "Cleared.";
    render();
  };

  render();
</script>
</body>
</html>
