            <div class="copyRow">
              <div class="muted copyLabel">Algorand</div>
              <code class="kbd">GU4AQMWVLOBJXODQS6S62RZW5C6LES4W4YGSFM5RGHF6AQAAVJAF5GYXXM</code>
              <button class="btn" type="button" data-copy="GU4AQMWVLOBJXODQS6S62RZW5C6LES4W4YGSFM5RGHF6AQAAVJAF5GYXXM">Copy</button>
            </div>

          </div>

        </div>
      </div>
    </div>
  </main>

</div>

<script>
(function () {
  function flash(btn, text, ms) {
    const prev = btn.textContent;
    btn.textContent = text;
    setTimeout(() => (btn.textContent = prev), ms);
  }

  function copyText(text, btn) {
    navigator.clipboard.writeText(text)
      .then(() => flash(btn, "Copied", 900))
      .catch(() => flash(btn, "Failed", 1200));
  }

  document.addEventListener("click", function (e) {
    const btn = e.target.closest("button[data-copy]");
    if (!btn) return;
    copyText(btn.getAttribute("data-copy"), btn);
  });
})();
</script>

</body>
</html>
